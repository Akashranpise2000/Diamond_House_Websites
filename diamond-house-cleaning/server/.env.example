# Environment
NODE_ENV=development

# Server
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/diamond-house-cleaning

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=7d

# Email Service (AWS SES or SendGrid)
EMAIL_SERVICE=SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key
EMAIL_FROM=noreply@diamondhousecleaning.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# File Upload (AWS S3 or Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Alternative S3
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=your-aws-s3-access-key
AWS_S3_SECRET_KEY=your-aws-s3-secret-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@diamondhousecleaning.com
ADMIN_PASSWORD=Admin@123

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000